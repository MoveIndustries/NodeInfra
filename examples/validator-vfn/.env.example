# AWS Configuration
AWS_PROFILE=your-aws-profile
AWS_REGION=us-east-1

# Cluster Configuration
VALIDATOR_NAME=validator-01

# VPC Configuration (optional)
# VPC_CIDR=10.0.0.0/20

# DNS Configuration (optional)
ENABLE_DNS=false
# DNS_ZONE_NAME=example.com

# Node Configuration (optional)
# Memory-optimized instances for blockchain workloads (4-8 vCPU, 32GB RAM)
# NODE_INSTANCE_TYPES=r6a.xlarge,r6i.xlarge,m6a.2xlarge

# Deployment Topology
# Controls which nodes are deployed and their public access configuration
#
# Option 1: Validator + VFN (2-tier)
#   DEPLOY_VFN=true
#   DEPLOY_FULLNODE=false
#   → VFN gets LoadBalancer (public API)
#   → External clients access VFN directly
#
# Option 2: Validator + VFN + Fullnode (3-tier)
#   DEPLOY_VFN=true
#   DEPLOY_FULLNODE=true
#   → Fullnode gets LoadBalancer (public API)
#   → VFN is ClusterIP (private, internal only)
#   → External clients access fullnode
#
# Option 3: Validator only
#   DEPLOY_VFN=false
#   DEPLOY_FULLNODE=false
#   → No public access
#
DEPLOY_VFN=true
DEPLOY_FULLNODE=false

# Node Names (optional)
# VALIDATOR_NAME=validator-01
# VFN_NAME=vfn-01
# FULLNODE_NAME=fullnode-01

# Kubernetes Configuration (optional)
# NAMESPACE=movement-l1

# Validator Identity Secret
# Create this secret before deploying:
#   kubectl create namespace movement-l1
#   kubectl create secret generic validator-identity \
#     --from-file=validator-identity.yaml=./keys/validator-identity.yaml \
#     -n movement-l1
#
VALIDATOR_KEYS_SECRET=validator-identity